@model IEnumerable<Faculty.Models.ViewModels.CourceViewModel>

@{
    ViewBag.Title = "курсы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Все курсы которые предлагает кафедра</h3>
<hr />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditCount)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.lecProfessor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.semProfessor)
        </th>
        <th>
            Тип
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>

        <td>
            Лекция(@Html.DisplayFor(modelItem => item.lecCreditCount))
            +
            Семинар(@Html.DisplayFor(modelItem => item.SemCreditCount))=@item.CreditCount
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lecProfessor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.semProfessor)
        </td>
        <td>
            @if (item.isElective)
            {
                <p style="color:blue;">элективная</p>
            }
            else
            {
                    <p style="color:green;">Обязательная</p>
            }
        </td>
        <td>
            <a href="/Home/Course/@item.CourseId" class="btn btn-default">Просмотреть</a>
        </td>
    </tr>
    }

</table>


