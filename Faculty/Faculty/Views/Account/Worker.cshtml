@model Faculty.Models.users.Worker

@{
    ViewBag.Title = "Worker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Сотрудник кафедры №@Model.id</h2>

<div>

    <dl class="dl-horizontal">
        <dt>
            Имя:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

        <dt>
            Отчество:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            Фамилия:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Почта:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Степень:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ScienceDegree)
        </dd>



        <dt>
            Должность:
        </dt>

        <dd>
            @if (Model.isItProfessor)
            {
                    <p>Преподователь</p> 
            }
            else
            {
                    <p>Сотрудник кафедры</p>

            }
        </dd>

    </dl>
</div>

