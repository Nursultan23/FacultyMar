@model Faculty.Models.users.Student

@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Студент №@Model.Id</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Имя:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

        <dt>
            Отчество:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            Фамилия:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>


        <dt>
            Почта:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Дата поступления:
        </dt>

        <dd>
            <p>@Model.AddmissionTime.ToShortDateString()</p>
        </dd>

        <dt>
            Дата Выпуска:
        </dt>

        <dd>
            <p>@Model.GraduationTime.ToShortDateString()</p>
        </dd>

       
        <dt>
           Курс:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stage)
        </dd>

    </dl>
</div>

